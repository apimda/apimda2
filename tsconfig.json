{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "lib": ["ES2020"],
    "module": "CommonJS",
    "target": "ES2020",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "files": [],
  "exclude": ["**/*.config.ts"],
  "references": [
    {
      "path": "./packages/client"
    },
    {
      "path": "./packages/core"
    },
    {
      "path": "./packages/server"
    },
    {
      "path": "./integration-test"
    }
  ]
}
